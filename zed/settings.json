// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "cursor_shape": "bar",
  "git": {
    "inline_blame": {
      "enabled": false
    },
    "disable_git": false,
    "git_gutter": "hide",
    "enable_diff": false,
    "enable_status": false
  },
  "scrollbar": {
    "git_diff": false
  },
  "terminal": {
    "shell": "system"
  },
  "gutter": {
    "line_numbers": true,
  },
  "drag_and_drop_selection": {
    "delay": 0,
  },
  "disable_ai": true,
  "ui_font_family": "Adwaita Sans",
  "unnecessary_code_fade": 0.2,
  "buffer_line_height": "standard",
  "buffer_font_weight": 400.0,
  "buffer_font_family": "Consolas",
  "ssh_connections": [
    {
      "host": "devel-8.gebz.local",
      "args": [],
      "projects": [
        {
          "paths": ["/rust"],
        },
        {
          "paths": ["/rust/projects/learn/code_with_boris/./"],
        },
      ],
    },
  ],
  "icon_theme": "Material Icon Theme",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto",
  },
  "file_types": {},
  "ui_font_size": 16,
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "VSCode Dark Polished",
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
  },
}
